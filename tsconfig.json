{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "public", ".cache"],
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "validate": false
    }
  ]
}
